                <!--android:layout_below="@id/name"-->
                <!--android:text="RED"-->
                <!--android:textColor="#000000"-->
                <!--android:textSize="13dp" />-->


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>